<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.theme.Ejercicio3MiPrimeraApp">

    <TextView
        android:id="@+id/tagLogin"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="LOGIN"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nombre"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50dp"
        />


    <EditText
        android:id="@+id/nombre"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tagLogin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="100dp"
        android:hint="Nombre"
        android:layout_marginStart="20dp"
        />

    <EditText
        android:id="@+id/Apellidos"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Apellidos"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/Apellidos"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Email"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        />

    <EditText
        android:id="@+id/pass"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Contrasenha"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        />

    <EditText
        android:id="@+id/passOkey"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/pass"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Confirmar Contrasenha"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        />

    <Button
        android:id="@+id/btnAlta"
        android:layout_width="300dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/passOkey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Alta"
        />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="300dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/btnAlta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Cancelar"
        />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="300dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/btnCancelar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Salir"
        />

</androidx.constraintlayout.widget.ConstraintLayout>