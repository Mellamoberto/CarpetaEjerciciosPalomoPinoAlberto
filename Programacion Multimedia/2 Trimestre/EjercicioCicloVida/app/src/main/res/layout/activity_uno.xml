<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ejercicio3.Uno">


    <TextView
        android:id="@+id/pantalla1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANTALLA 1"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/btnUno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a pantalla 2"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:width="150dp"
        android:height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pantalla1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="irPantallaDos"
        />

</androidx.constraintlayout.widget.ConstraintLayout>