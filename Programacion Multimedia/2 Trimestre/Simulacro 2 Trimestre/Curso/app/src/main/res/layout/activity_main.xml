<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBienvenido"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="CURSOS"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/celest"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="115dp"
        android:text="Nombre"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvBienvenido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etNombre"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvBienvenido"
        app:layout_constraintStart_toEndOf="@id/tvNombre"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_play1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="1ยบ Curso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_play2"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_play2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="2ยบ Curso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_play3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="3ยบ Curso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_play2"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/celest"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CURSO ESPECIAL"
                android:gravity="center"
                android:textSize="30dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>